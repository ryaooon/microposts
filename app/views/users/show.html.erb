<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
     <!-- ユーザのプロフィール表示 -->
      <%= render 'user_profile' , user: @user %>
      
      <!-- フォローしている/されているユーザリストへのリンク　-->
      <%= link_to "フォロー",  followings_user_path(@user.id) %>
      /
      <%= link_to "フォロワー",  followers_user_path(@user.id) %>
<%= link_to "favorite", favorites_user_path(@user.id) %>
    </section>
  </aside>
  <div class="col-md-8">
    
<%= render 'follow_form' if logged_in? %>

    
<% if @user.microposts.any? %>

      <h3>Microposts (
<%= @user.microposts.count %>
)</h3>
      <ol class="microposts">
        
<%= render @microposts %>

      </ol>
    
<% end %>

  </div>
</div>

